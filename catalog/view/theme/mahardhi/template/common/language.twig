{% if languages|length > 1 %}
<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-language" style="display: inline;">
	{% for language in languages %}
			{% if language.code != code %}
				<button class="btn-link language-select text-uppercase" type="button" name="{{ language.code }}" style="font-size: 18px; margin-right: 18px; font-weight: normal; color: #626262;width: 40px;
    overflow: hidden;height: 28px;">{{ language.code }}</button>
			{% endif %}
	{% endfor %}
	<input type="hidden" name="code" value="" />
	<input type="hidden" name="redirect" value="{{ redirect }}" />
</form>
{% endif %}