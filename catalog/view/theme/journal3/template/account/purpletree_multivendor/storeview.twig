{{ header }}
{{ j3.loadController('journal3/layout', 'top') }}
<div class="pts-container container">
	<ul class="pts-breadcrumb breadcrumb">
		{% for breadcrumb in breadcrumbs %}
		<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		{% endfor %}
	</ul>
	<style>
	.page-title-wrapper{
	       float: left !important;
		   
	} 
	.right-block{
	       position: relative;
	}
	</style>
	{% if error_warning %}
	<div class="alert pts-alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
	{% endif %}
	<div class="pts-row d-flex row">
	{% if column_right %}
    {% set class = 'pts-col-sm-9 col-sm-9' %}
	{% set classproducts = 'pts-col-lg-4 pts-col-md-4' %}
	{% set pts_width = '33%' %}
	<style>
	.main-products.product-grid .product-layout:not(.swiper-slide) {
			padding: 10px;
			width: calc(100% / 3 - 0.01px);
		}

	@media only screen and (max-width: 1100px) {
		.main-products.product-grid .product-layout:not(.swiper-slide) {
			padding: 10px;
			width: calc(100% / 2 - 0.01px);
		}
	}
	@media only screen and (max-width: 470px) {
		.main-products.product-grid .product-layout:not(.swiper-slide) {
			padding: 10px;
			width: calc(100% / 1 - 0.01px);
		}
	}
	</style>
    {% else %}
    {% set class = 'pts-col-sm-12 col-sm-12' %}
	{% set classproducts = 'pts-col-lg-3 pts-col-md-3' %}
	{% set classproducts = 'pts-col-lg-3 pts-col-md-3' %}
	{% set pts_width = '25%' %}
